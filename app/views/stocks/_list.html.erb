<table class= "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <% if @user.id == current_user.id %>
      <th>Actions</th>
      <% end %>
    </tr> 
  </thead>


  <tbody>
  <% @user_stocks.each do |stock| %>
      <tr>
      <td><%= stock.name %></td>
      <td><%= stock.ticker %></td>
      <td><%= stock.id %> </td>
      <% if @user.id == current_user.id %>
      <td> <%= button_to "Delete", user_stock_path(stock.id), method: :delete, class:' btn btn-xs btn-danger'  %></td>
      <% end %>
      </tr>
  <% end %>
  </tbody>
</table>